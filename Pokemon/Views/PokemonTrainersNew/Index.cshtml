@model IEnumerable<Pokemon.Models.Pokemon_Trainer>

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron" style="text-align:center; background-color:white; margin-bottom:50px;">
    <img src="@Url.Content("~/Images/5.gif")" width="700px" height="200px" alt="imgf" />
</div>

<div class="row">
    <div class="col-md-8">

        <h3>Pokemon Trainers List:</h3>

    </div>
    <div class="col-md-4" style="text-align:right;">
        <h3>
            @Html.ActionLink("Create New", "Create")
        </h3>
    </div>
</div>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
