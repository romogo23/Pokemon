@model List<Pokemon.Models.ViewModels.PokemonCatched>
@Styles.Render("~/Content/styleH2.css")

@{
    ViewBag.Title = "Index";
}

<div class="jumbotron" style="text-align:center; background-color:white; margin-bottom:50px;">
    <img src="@Url.Content("~/Images/5.gif")" width="700px" height="200px" alt="imgf" />
</div>

<div class="row">
    <div class="col-md-6">
        <h3>Pokemon List:</h3>
        <table class="table table-striped">
            <tr>
                <th>
                    Identifier
                </th>
                <th>
                    Name
                </th>
                <th>
                    Type 1
                </th>
                <th>
                    Type 2
                </th>
                <th>
                    Images
                </th>
            </tr>
            @foreach (var poke in Model)
            {
                <tr>
                    <td>
                        @poke.Identifier
                    </td>
                    <td>
                        @poke.Name.ToUpper()
                    </td>
                    <td>
                        @poke.PrimaryType.ToUpper()
                    </td>
                    <td>
                        @if (!poke.SecundaryType.IsEmpty())
                        {
                            @poke.SecundaryType.ToUpper()
                        }
                    </td>
                    <td>
                        <a href="@poke.Image_Url" target="_blank">
                            @*<span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-images" viewBox="0 0 16 16">
                                    <path d="M4.502 9a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3z" />
                                    <path d="M14.002 13a2 2 0 0 1-2 2h-10a2 2 0 0 1-2-2V5A2 2 0 0 1 2 3a2 2 0 0 1 2-2h10a2 2 0 0 1 2 2v8a2 2 0 0 1-1.998 2zM14 2H4a1 1 0 0 0-1 1h9.002a2 2 0 0 1 2 2v7A1 1 0 0 0 15 11V3a1 1 0 0 0-1-1zM2.002 4a1 1 0 0 0-1 1v8l2.646-2.354a.5.5 0 0 1 .63-.062l2.66 1.773 3.71-3.71a.5.5 0 0 1 .577-.094l1.777 1.947V5a1 1 0 0 0-1-1h-10z" />
                                </svg>
                            </span>*@
                            <img src="@poke.Image_Url" width="50px" height="50px" alt="pokeImg" />
                        </a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-3" style="text-align:center; padding-top:35px;">
        @using (Html.BeginForm("Catch", "CatchedPokemon", FormMethod.Get))
        {
            <img src="@Url.Content("~/Images/3.gif")" width="200px" height="200px" alt="catch" />
            <input class="btn btn-danger" value="Catch a Pokemon!" type="submit" />
        }
    </div>
    <div class="col-md-3" style="text-align:center">
        <h3>Are you a Pokemon Trainer?</h3>
        @using (Html.BeginForm("Index", "PokemonTrainersNew", FormMethod.Get))
        {
            <img src="@Url.Content("~/Images/6.gif")" width="250px" height="150px" alt="team"/>
            <input class="btn btn-warning" value="Come Join Us!" type="submit" />
        }
    </div>
</div>
